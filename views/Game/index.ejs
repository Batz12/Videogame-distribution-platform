<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/game.css">
    <section>
        <h2>Focus - The distribution platform of the future </h2>
        <div class="row">
            <% if(user_info.Type=='Developer' ) { %>
                <div class="col-6">
                    <a href="/Game/new" name="add" class="btn btn-lg btn-info font-weight-bold">Add Games</a>
                </div>
                <div class="col-6">
                    <a href="/Game/sale" name="main" class="btn btn-lg btn-success">Enable/Disable Summer Sale(50% off)</a>
                </div>
                <% } %>
        </div>
        <br>
        <% for(let i=0; i<info.length;i++) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(info[i].Picture.length) { %>
                            <img class="img-fluid" alt="" src="<%= info[i].Picture %>">
                            <% }else { %>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/dwuufoptw/image/upload/v1635514064/YelpCamp/a9x7a9kndmjhfkwc9l5f.jpg">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= info[i].Gname %>
                            </h5>
                            <p class="card-text">
                                <u><i>Developer</i></u> :
                                <%= info[i].Developer %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <u><i>Genre</i></u> :
                                    <%= info[i].Genre %>
                                </small>
                            </p>
                        </div>

                        <a href="/Game/<%=info[i].G_id%>" name="main" class="btn btn-success">View</a>
                        <a href="/Game/edit/<%=info[i].G_id%>" name="main" class="btn btn-info">Edit</a>
                    </div>
                </div>
            </div>
            <% } %>
    </section>