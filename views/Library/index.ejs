<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/game.css">
    <section>
        <div class="row mx-md-n5">
            <div class="col-6 px-md-5">
                <h2>Welcome to the Game Library </h2>
            </div>
            <div class="col-6 md-5 pl-5">Signed in as <b>
                    <%= user_info.Username %>
                </b></div>
        </div>
        <% for(let i=0; i<info.length;i++) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(info[i].L_Name.length) { %>
                            <img class="img-fluid" alt="" src="<%= info[i].L_Name %>">
                            <% }else { %>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/dwuufoptw/image/upload/v1635514064/YelpCamp/a9x7a9kndmjhfkwc9l5f.jpg">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <u><i>No. of times played:</i></u> :
                                <%= info[i].Game_count %>
                            </h5>
                            <p class="card-text">
                                <u><i>Achievements</i></u> :
                                <%= info[i].Achievements%>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
                <br>
            <% } %>
    </section>
    <a href="/Game" name="main" class="btn btn-info font-weight-bold ">Main Page</a>